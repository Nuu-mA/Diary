<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/person_age_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flower_label_age_text"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/person_age_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/background_gray_color"
        android:entries="@array/age_items"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/person_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flower_label_name_text"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/person_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/background_gray_color"
        android:inputType="text"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        tools:ignore="LabelFor" />

</LinearLayout>
