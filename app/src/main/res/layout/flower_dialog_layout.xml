<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/color_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flower_label_color_text"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/color_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="text"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/flower_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flower_label_name_text"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/flower_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="text"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        tools:ignore="LabelFor" />

</LinearLayout>
